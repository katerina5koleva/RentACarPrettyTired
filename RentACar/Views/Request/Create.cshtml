@using RentACar.Data.ViewModels
@model CreateRequestVM

@{
    ViewData["Title"] = "Create Rental Request";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <form id="availabilityForm" method="post" asp-action="CheckAvailability" data-ajax="true" data-ajax-update="#autoSelection" data-ajax-mode="replace">
        >
        @Html.AntiForgeryToken()
        <div class="row g-3">
            <div class="col-md-6">
                <label asp-for="PickUpDate" class="form-label"></label>
                <input asp-for="PickUpDate" type="date" class="form-control"
                       min="@DateTime.Today.AddDays(1).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="PickUpDate" class="text-danger"></span>
            </div>
            <div class="col-md-6">
                <label asp-for="ReturnDate" class="form-label"></label>
                <input asp-for="ReturnDate" type="date" class="form-control"
                       min="@DateTime.Today.AddDays(2).ToString("yyyy-MM-dd")" />
                <span asp-validation-for="ReturnDate" class="text-danger"></span>
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">
            Check Availability
            <span id="loadingSpinner" class="spinner-border spinner-border-sm d-none"></span>
        </button>
    </form>

    <div id="autoSelection">
        @if (Model.AvailableAutos != null && Model.AvailableAutos.Any())
        {
            @Html.Partial("_AutoSelectionPartial", Model)
        }
    </div>


    <!-- Hidden form for final submission -->
    <form asp-action="Create" method="post" id="bookingForm" class="d-none mt-4">
        <input type="hidden" asp-for="PickUpDate" />
        <input type="hidden" asp-for="ReturnDate" />
        <input type="hidden" asp-for="AutoId" />
        <button type="submit" class="btn btn-success">Confirm Booking</button>
    </form>
</div>

@section Scripts {
    <!-- Load jQuery FIRST -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Then AJAX Unobtrusive -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-ajax-unobtrusive/3.2.6/jquery.unobtrusive-ajax.min.js"></script>
    <!-- Then validation -->
    <partial name="_ValidationScriptsPartial" />

    <script>
        $(document).ready(function() {
            // Debugging - log initial state
            console.log("Document ready - initial PickUpDate:", $('#PickUpDate').val());
            console.log("Document ready - initial ReturnDate:", $('#ReturnDate').val());

            // 1. Handle AJAX errors
            $(document).ajaxError(function(event, xhr) {
                console.error("AJAX Error:", xhr.responseText);
                $('#loadingSpinner').addClass('d-none');
                let errorMsg = xhr.responseText || "Error checking availability";
                $('#autoSelection').html(`<div class="alert alert-danger">${errorMsg}</div>`);
            });

            // 2. Handle successful availability check
            $(document).ajaxSuccess(function(event, xhr, settings) {
                if (settings.url.includes("CheckAvailability")) {
                    console.log("AJAX Success - Dates:",
                        $('#PickUpDate').val(), $('#ReturnDate').val());

                    // Update the FINAL form's hidden fields
                    $('#finalPickUpDate').val($('#PickUpDate').val());
                    $('#finalReturnDate').val($('#ReturnDate').val());

                    // Debug output
                    console.log("Updated final dates:",
                        $('#finalPickUpDate').val(), $('#finalReturnDate').val());

                    // Show booking form if vehicles available
                    if ($('#autoSelection .card').length > 0) {
                        $('#bookingForm').removeClass('d-none');
                    }
                }
            });

            // 3. Handle vehicle selection
            $(document).on('click', '.select-vehicle', function() {
                const autoId = $(this).data('autoid');
                console.log("Vehicle selected:", autoId);

                $('#finalAutoId').val(autoId);
                console.log("Set finalAutoId to:", $('#finalAutoId').val());

                // Visual feedback
                $('.card').removeClass('border-primary border-3');
                $(this).closest('.card').addClass('border-primary border-3');
            });

            // 4. Date validation
            $('#PickUpDate, #ReturnDate').change(function() {
                const pickUp = new Date($('#PickUpDate').val());
                const ret = new Date($('#ReturnDate').val());
                console.log("Date changed - PickUp:", pickUp, "Return:", ret);

                if (pickUp >= ret) {
                    $('#autoSelection').html(
                        '<div class="alert alert-warning">Return date must be after pick-up date</div>'
                    );
                    $('#bookingForm').addClass('d-none');
                }
            });

            // 5. Ensure final form has latest dates before submission
            $('#bookingForm').submit(function(e) {
                console.log("Final form submitting - verifying dates...");
                console.log("PickUpDate:", $('#finalPickUpDate').val());
                console.log("ReturnDate:", $('#finalReturnDate').val());

                if (!$('#finalPickUpDate').val() || !$('#finalReturnDate').val()) {
                    alert("Please check availability first");
                    e.preventDefault();
                }
            });
        });

        // Global function for vehicle selection
        function selectAuto(autoId) {
            console.log("selectAuto called with:", autoId);
            $('#finalAutoId').val(autoId);

            // Visual feedback
            $('.card').removeClass('border-primary border-3');
            $(`.card[data-auto-id="${autoId}"]`).addClass('border-primary border-3');

            // Ensure form is visible
            $('#bookingForm').removeClass('d-none');

            console.log("Current form state:", {
                autoId: $('#finalAutoId').val(),
                pickUp: $('#finalPickUpDate').val(),
                return: $('#finalReturnDate').val()
            });
        }
    </script>
}